
<p id="notice" class="alert" role="alert"><%= notice %></p>

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">News</h1>
    <%= link_to 'New News', new_news_path, class: "btn btn-primary" %>
</div>


<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>News type</th>
      <th>Details</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.news_type %></td>
        <td><%= news.details %></td>
        <td>
          <%= link_to 'Show', news, class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_news_path(news), class: "btn btn-primary" %>
          <%= link_to 'Delete', news, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


