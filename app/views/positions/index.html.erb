
<p id="notice" class="alert" role="alert"><%= notice %></p>

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Positions</h1>
</div>


<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th class="d-none d-sm-table-cell">User</th>
      <th>Symbol</th>
      <th>Quantity</th>
      <th>Average cost</th>
      <th class="d-none d-sm-table-cell">Current value</th>
      <th class="d-none d-sm-table-cell">Eod value</th>
    </tr>
  </thead>

  <tbody id="position_table">
    <% @positions.each do |position| %>
      <%= render "/positions/row", {position: position} %>
    <% end %>
  </tbody>
</table>


